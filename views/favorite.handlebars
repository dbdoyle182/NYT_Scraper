<div class="container">
    
    {{#each article}}
    {{#if saved}}
    <div class="card" style="height:225px">
        {{!-- <div class="card-image waves-effect waves-block waves-light">
            <img style="height:100px; width:100px" class="activator" src="https://upload.wikimedia.org/wikipedia/commons/4/40/New_York_Times_logo_variation.jpg">
        </div> --}}
        <div class="card-content">
            <span class="card-title activator grey-text text-darken-4">{{title}}<i class="material-icons right">more_vert</i></span>
            <p><a href="{{link}}">{{link}}</a></p>
            <a class="btn-floating halfway-fab waves-effect waves-light red"  style="bottom:20px"><i class="material-icons" data-id='{{_id}}' id='deletebtn'>delete</i></a>
            <span class="card-title grey-text text-darken-4">{{author}}</span>
            <p>{{summary}}</p>
        </div>
        <div class="card-reveal">
            <span class="card-title">Comments<i class="material-icons right">close</i></span>
            {{#each comment}}
            <div class="note">
                <span><h5>{{this.title}}</h5><a href="/comment/{{_id}}"><i class="material-icons right">delete</i></a></span>
                <p>{{this.body}}</p>
            </div>    
            {{/each}}
            <form action="/article/{{_id}}" method="post">
                <label for="title">Title</label>
                <input type="text" name="title" id="title">
                <textarea name="body" id="textarea1" class="materialize-textarea" placeholder="Type your comment here"></textarea>
                <button type="submit" class="btn">Submit</button>
            </form>
        </div>
    </div>
    {{/if}}
    {{/each}}
</div>