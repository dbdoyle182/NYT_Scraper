<div class="container">
    {{#each article}}
    <div class="card" style="height:125px">
        {{!-- <div class="card-image waves-effect waves-block waves-light">
            <img style="height:100px; width:100px" class="activator" src="https://upload.wikimedia.org/wikipedia/commons/4/40/New_York_Times_logo_variation.jpg">
        </div> --}}
        <div class="card-content">
            <span class="card-title activator grey-text text-darken-4">{{title}}<i class="material-icons right">more_vert</i></span>
            <p><a href="{{link}}">{{link}}</a></p>
            <a class="btn-floating halfway-fab waves-effect waves-light red" style="bottom:20px"><i class="material-icons">add</i></a>
        </div>
        <div class="card-reveal">
            <span class="card-title grey-text text-darken-4">{{author}}<i class="material-icons right">close</i></span>
            <p>{{summary}}</p>
        </div>
    </div>
    {{/each}}
</div>